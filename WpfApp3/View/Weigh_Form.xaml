<UserControl
    x:Class="WpfApp3.View.Weigh_Form"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModel="clr-namespace:WpfApp3.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp3.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    Name="Weigh_Form_User_Control"
    Width="1366"
    Height="768"
    syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Windows11Dark}"
    DataContext="{DynamicResource Weigh_Form_ViewModel_Resource}"
    Loaded="Weigh_Form_User_Control_Loaded"
    mc:Ignorable="d">
    <Grid x:Name="Main_Grid">
        <!--  Define Rows for each ComboBox & TextBox  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Define Columns for ComboBox, Label, and TextBox  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Row="0"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Description: "
            FontSize="25" />
        <Label
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Grammage: "
            FontSize="25" />
        <Label
            Grid.Row="2"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Label Grammage: "
            FontSize="25" />
        <Label
            Grid.Row="0"
            Grid.RowSpan="1"
            Grid.Column="2"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Price Per KG: "
            FontSize="25" />
        <Label
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="2"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Country: "
            FontSize="25" />
        <Label
            Grid.Row="2"
            Grid.RowSpan="1"
            Grid.Column="2"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Scale Status: "
            FontSize="25" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt1"
            Grid.Row="0"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Printinghistory_Model.IT_Description}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt2"
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Printinghistory_Model.SD_UnitOfMeasureCode}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt3"
            Grid.Row="2"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Printinghistory_Model.SP_LabelUnitOfMeasure}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt4"
            Grid.Row="0"
            Grid.RowSpan="1"
            Grid.Column="3"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Printinghistory_Model.PH_PricePerKgText}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt5"
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="3"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Printinghistory_Model.IT_Country}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt6"
            Grid.Row="2"
            Grid.RowSpan="1"
            Grid.Column="3"
            Grid.ColumnSpan="1"
            Width="224"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#5cff64"
            FontSize="25"
            Foreground="Black"
            IsReadOnly="True"
            Text="OK"
            TextAlignment="Center"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfDataGrid
            x:Name="SfDataGrid1"
            Grid.Row="3"
            Grid.RowSpan="8"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Width="1300"
            Margin="30,0,0,0"
            VerticalAlignment="Stretch"
            AddNewRowPosition="None"
            AllowDeleting="False"
            AllowEditing="False"
            AllowResizingColumns="True"
            AutoExpandGroups="True"
            AutoGenerateColumns="False"
            ColumnSizer="Star"
            FontFamily="Helvetica"
            FontSize="14"
            GridCopyOption="IncludeHeaders, CopyData,CutData,IncludeFormat"
            GridLinesVisibility="Horizontal"
            GridPasteOption="None"
            GridValidationMode="None"
            HeaderContextMenu="{x:Null}"
            HeaderLinesVisibility="Horizontal"
            ItemsSource="{Binding PrintingHistory_IEnum, Mode=TwoWay}"
            LiveDataUpdateMode="AllowDataShaping"
            PreviewKeyDown="SfDataGrid1_PreviewKeyDown"
            RowHeight="30"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            SelectionMode="Extended">
            <syncfusion:SfDataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem
                        x:Name="CopyRow"
                        Click="CopyRow_Click"
                        Header="Copy Row(s)" />
                </ContextMenu>
            </syncfusion:SfDataGrid.ContextMenu>
            <syncfusion:SfDataGrid.Columns>
                <syncfusion:GridDateTimeColumn
                    HeaderText="Date Time"
                    HorizontalHeaderContentAlignment="Left"
                    MappingName="PH_PrintingDate"
                    TextAlignment="Left" />
                <syncfusion:GridTextColumn
                    HeaderText="Price"
                    HorizontalHeaderContentAlignment="Left"
                    MappingName="PH_Price"
                    TextAlignment="Left" />
                <syncfusion:GridNumericColumn
                    HeaderText="Weight"
                    HorizontalHeaderContentAlignment="Left"
                    MappingName="PH_WeighingScaleData"
                    NumberDecimalDigits="3"
                    TextAlignment="Left" />
                <syncfusion:GridTextColumn
                    HeaderText="Barcode"
                    HorizontalHeaderContentAlignment="Left"
                    MappingName="PH_ProductBarcode"
                    TextAlignment="Left" />
            </syncfusion:SfDataGrid.Columns>
        </syncfusion:SfDataGrid>
        <syncfusion:ButtonAdv
            x:Name="button_DeleteRecord"
            Grid.Row="11"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,5,200,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Click="button_DeleteRecord_Click"
            CornerRadius="5"
            FontFamily="Helvetica"
            FontSize="25"
            IconHeight="32"
            IconWidth="32"
            Label="Delete  "
            LargeIcon="{StaticResource Img_Delete}"
            SmallIcon="{StaticResource Img_Delete}" />

        <syncfusion:ButtonAdv
            x:Name="button_Back"
            Grid.Row="11"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            Margin="0,5,170,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Click="button_Back_Click"
            CornerRadius="5"
            FontFamily="Helvetica"
            FontSize="25"
            IconHeight="32"
            IconWidth="32"
            Label="Back  "
            LargeIcon="{StaticResource Img_Back}"
            SmallIcon="{StaticResource Img_Back}" />
    </Grid>
</UserControl>
