<Page
    x:Class="WpfApp3.View.BigLabel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp3.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    Title="BigLabel"
    Width="226.77"
    Height="340.16"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <StackPanel x:Name="stackPanel">
            <Grid
                x:Name="Main_Grid"
                Width="210"
                Height="280"
                Margin="0,30,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <!--  Define Rows for each ComboBox & TextBox  -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="12" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="12" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Define Columns for ComboBox, Label, and TextBox  -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="30" />
                    <ColumnDefinition Width="28" />
                    <ColumnDefinition Width="20" />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="65" />
                </Grid.ColumnDefinitions>

                <syncfusion:SfTextBoxExt
                    x:Name="TextBox1"
                    Grid.Row="0"
                    Grid.RowSpan="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="6"
                    Margin="0,0,10,0"
                    VerticalContentAlignment="Top"
                    BorderThickness="0"
                    FontSize="13"
                    Text="Organic In-Conversion"
                    Watermark="Organic In-Conversion" />

                <syncfusion:SfTextBoxExt
                    x:Name="TextBox2"
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="6"
                    VerticalContentAlignment="Top"
                    BorderThickness="0"
                    FontSize="18"
                    Text="Papaya"
                    TextWrapping="Wrap"
                    Watermark="Papaya" />

                <syncfusion:SfTextBoxExt
                    x:Name="TextBox3"
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="6"
                    VerticalAlignment="Top"
                    BorderThickness="0"
                    FontSize="8"
                    Text="Betik"
                    TextWrapping="Wrap"
                    Watermark="Betik" />

                <Border
                    Grid.Row="4"
                    Grid.RowSpan="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="6"
                    Width="152"
                    Height="1"
                    HorizontalAlignment="Left"
                    Background="Black"
                    BorderBrush="Black"
                    BorderThickness="1" />

                <syncfusion:SfTextBoxExt
                    x:Name="TextBox4"
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="6"
                    VerticalAlignment="Bottom"
                    BorderThickness="0"
                    FontSize="8"
                    Text="木瓜"
                    Watermark="木瓜" />

                <syncfusion:SfTextBoxExt
                    x:Name="TextBox5"
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    BorderThickness="0"
                    FontSize="20"
                    Text="RM19.14"
                    Watermark="RM19.14" />

                <syncfusion:SfTextBoxExt
                    x:Name="TextBox6"
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    BorderThickness="0"
                    FontSize="8"
                    Text="(2.015kg) when packed"
                    Watermark="(2.015kg) when packed" />

                <syncfusion:SfTextBoxExt
                    x:Name="TextBox7"
                    Grid.Row="7"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    BorderThickness="0"
                    FontSize="10"
                    Text="RM9.50/KG"
                    Watermark="RM9.50/KG" />

                <syncfusion:SfTextBoxExt
                    x:Name="TextBox8"
                    Grid.Row="8"
                    Grid.RowSpan="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    BorderThickness="0"
                    FontSize="10"
                    Text="03-6005/J-019"
                    Watermark="03-6005/J-019" />

                <syncfusion:SfTextBoxExt
                    x:Name="TextBox9"
                    Grid.Row="8"
                    Grid.RowSpan="1"
                    Grid.Column="3"
                    Grid.ColumnSpan="1"
                    HorizontalAlignment="Center"
                    BorderThickness="0"
                    FontSize="10"
                    Text="AB"
                    Watermark="AB" />

                <Border
                    Grid.Row="9"
                    Grid.RowSpan="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="6"
                    Width="152"
                    Height="1"
                    HorizontalAlignment="Left"
                    Background="Black"
                    BorderBrush="Black"
                    BorderThickness="1" />

                <Image
                    x:Name="Image1"
                    Grid.Row="9"
                    Grid.RowSpan="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="6"
                    Width="50"
                    Height="50"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="{StaticResource Img_qrcode}" />

                <Image
                    x:Name="Image2"
                    Grid.Row="4"
                    Grid.RowSpan="5"
                    Grid.Column="3"
                    Grid.ColumnSpan="3"
                    Width="50"
                    Height="50"
                    Margin="0,0,2,0"
                    HorizontalAlignment="Right"
                    Source="{StaticResource Img_NasaaCON_MyOrg}" />

                <syncfusion:SfTextBoxExt
                    x:Name="TextBox10"
                    Grid.Row="10"
                    Grid.RowSpan="1"
                    Grid.Column="3"
                    Grid.ColumnSpan="3"
                    Margin="-15,7,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="7"
                    Text="Produce of Burkina Faso"
                    Watermark="Produce of Burkina Faso" />

                <syncfusion:SfTextBoxExt
                    x:Name="TextBox11"
                    Grid.Row="10"
                    Grid.RowSpan="1"
                    Grid.Column="3"
                    Grid.ColumnSpan="3"
                    Margin="-15,14,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="7"
                    Foreground="Black"
                    Text="Hasil Burkina Faso"
                    Watermark="Hasil Burkina Faso" />

                <syncfusion:SfTextBoxExt
                    x:Name="TextBox12"
                    Grid.Row="11"
                    Grid.RowSpan="1"
                    Grid.Column="3"
                    Grid.ColumnSpan="1"
                    Margin="-15,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Right"
                    BorderThickness="0"
                    FontSize="7"
                    Text="HZIJ"
                    TextAlignment="Left"
                    Watermark="HZIJ" />

                <syncfusion:SfTextBoxExt
                    x:Name="TextBox13"
                    Grid.Row="11"
                    Grid.RowSpan="1"
                    Grid.Column="3"
                    Grid.ColumnSpan="3"
                    Margin="-15,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="5"
                    Text="Grade Premium Size Mixed"
                    Watermark="Grade Premium Size Mixed" />

                <syncfusion:SfTextBoxExt
                    x:Name="TextBox14"
                    Grid.Row="11"
                    Grid.RowSpan="1"
                    Grid.Column="3"
                    Grid.ColumnSpan="3"
                    Margin="-15,15,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="5"
                    Text="Gred Premium Saiz Campur"
                    Watermark="Gred Premium Saiz Campur" />

                <Border
                    Grid.Row="0"
                    Grid.RowSpan="13"
                    Grid.Column="6"
                    Grid.ColumnSpan="1"
                    Width="1"
                    Height="240"
                    Background="Black"
                    BorderBrush="Black"
                    BorderThickness="1" />

                <Image
                    x:Name="Image4"
                    Grid.Row="0"
                    Grid.RowSpan="12"
                    Grid.Column="8"
                    Grid.ColumnSpan="1"
                    Width="55"
                    Height="190"
                    Margin="-10,0,0,0"
                    Source="{StaticResource Img_barcode}" />
            </Grid>
        </StackPanel>
    </Grid>
</Page>
