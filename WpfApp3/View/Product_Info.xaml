<UserControl
    x:Class="WpfApp3.View.Product_Info"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModel="clr-namespace:WpfApp3.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp3.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    Name="Product_Info_User_Control"
    Width="1366"
    Height="768"
    syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Windows11Dark}"
    DataContext="{DynamicResource Product_Info_Packet_ViewModel_Resource}"
    Loaded="Product_Info_User_Control_Loaded"
    mc:Ignorable="d">
    <Grid x:Name="Main_Grid">
        <!--  Define Rows for each ComboBox & TextBox  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Define Columns for ComboBox, Label, and TextBox  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Row="0"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Customer: "
            FontSize="25" />
        <Label
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="English Label Name: "
            FontSize="25" />
        <Label
            Grid.Row="2"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Malay Label Name: "
            FontSize="25" />
        <Label
            Grid.Row="3"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Chinese Label Name: "
            FontSize="25" />
        <Label
            Grid.Row="4"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Item Code: "
            FontSize="25" />
        <Label
            Grid.Row="5"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Grammage: "
            FontSize="25" />
        <Label
            Grid.Row="6"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Label Grammage: "
            FontSize="25" />
        <Label
            Grid.Row="7"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Barcode: "
            FontSize="25" />
        <Label
            Grid.Row="8"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Customer SKU: "
            FontSize="25" />
        <Label
            Grid.Row="9"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Certification: "
            FontSize="25" />
        <Label
            Grid.Row="10"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="My Organic Certification: "
            FontSize="25" />
        <Label
            x:Name="QuantityLabel"
            Grid.Row="11"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Quantity: "
            FontSize="25" />
        <Label
            Grid.Row="0"
            Grid.RowSpan="1"
            Grid.Column="2"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Date: "
            FontSize="25" />
        <Label
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="2"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Unit Price: "
            FontSize="25" />
        <Label
            Grid.Row="2"
            Grid.RowSpan="1"
            Grid.Column="2"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Country: "
            FontSize="25" />
        <Label
            Grid.Row="3"
            Grid.RowSpan="1"
            Grid.Column="2"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Category: "
            FontSize="25" />
        <Label
            Grid.Row="4"
            Grid.RowSpan="1"
            Grid.Column="2"
            Grid.ColumnSpan="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Content="Label Size: "
            FontSize="25" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt1"
            Grid.Row="0"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Productlisting_simple_Model.SP_SalesCode}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt2"
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Productlisting_simple_Model.SP_EnglishLabelDescription}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt3"
            Grid.Row="2"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Productlisting_simple_Model.SP_MalayLabelDescription}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt4"
            Grid.Row="3"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Productlisting_simple_Model.SP_ChineseLabelDescription}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt5"
            Grid.Row="4"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Productlisting_simple_Model.SP_ItemNo}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt6"
            Grid.Row="5"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Productlisting_simple_Model.SP_UnitOfMeasureCode}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt7"
            Grid.Row="6"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Productlisting_simple_Model.SP_LabelUnitOfMeasure}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt11"
            Grid.Row="7"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Productlisting_simple_Model.SP_ProductBarcode}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt12"
            Grid.Row="8"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Productlisting_simple_Model.SP_CustomerSKU}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt8"
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="3"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Productlisting_simple_Model.SP_UnitPrice}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt9"
            Grid.Row="2"
            Grid.RowSpan="1"
            Grid.Column="3"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Productlisting_simple_Model.IT_Country}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt10"
            Grid.Row="3"
            Grid.RowSpan="1"
            Grid.Column="3"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Productlisting_simple_Model.IT_inventorypostinggroup}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfTextBoxExt
            x:Name="SfTextBoxExt13"
            Grid.Row="4"
            Grid.RowSpan="1"
            Grid.Column="3"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            IsReadOnly="True"
            Text="{Binding Productlisting_simple_Model.SP_LabelSize}"
            TextAlignment="Left"
            TextWrapping="Wrap"
            Watermark="Enter a Value" />
        <syncfusion:SfMultiColumnDropDownControl
            x:Name="MultiColumnDropDown1"
            Grid.Row="9"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            AutoGenerateColumns="False"
            DisplayMember="Code"
            FontSize="22"
            ItemsSource="{Binding Certification_Actual_IEnum}"
            MouseEnter="MultiColumnDropDown1_MouseEnter"
            ReadOnly="True"
            Text="Combo Item 1 Certification"
            TextAlignment="Left"
            ValueMember="Code">
            <syncfusion:SfMultiColumnDropDownControl.Columns>
                <syncfusion:GridTextColumn MappingName="Code" />
            </syncfusion:SfMultiColumnDropDownControl.Columns>
        </syncfusion:SfMultiColumnDropDownControl>
        <syncfusion:SfMultiColumnDropDownControl
            x:Name="MultiColumnDropDown2"
            Grid.Row="10"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            AutoGenerateColumns="False"
            DisplayMember="Code"
            FontSize="22"
            ItemsSource="{Binding Myorgcertification_IEnum}"
            MouseEnter="MultiColumnDropDown2_MouseEnter"
            ReadOnly="True"
            Text="Combo Item 2 Certification"
            TextAlignment="Left"
            ValueMember="Code">
            <syncfusion:SfMultiColumnDropDownControl.Columns>
                <syncfusion:GridTextColumn MappingName="Code" />
            </syncfusion:SfMultiColumnDropDownControl.Columns>
        </syncfusion:SfMultiColumnDropDownControl>
        <syncfusion:UpDown
            x:Name="UpDown1"
            Grid.Row="11"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,6,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="25"
            MaxValue="9999"
            MinValue="1"
            NullValueText="Enter your weight:"
            NumberDecimalDigits="0"
            Step="1"
            TextAlignment="Left"
            UseNullOption="True"
            ValueChanged="UpDown1_ValueChanged"
            ZeroColor="Red"
            Value="0" />

        <syncfusion:ButtonAdv
            x:Name="button_Print"
            Grid.Row="11"
            Grid.RowSpan="1"
            Grid.Column="1"
            Grid.ColumnSpan="1"
            Margin="0,5,200,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Click="button_Print_Click"
            CornerRadius="5"
            FontFamily="Helvetica"
            FontSize="25"
            IconHeight="32"
            IconWidth="32"
            Label="Print  "
            LargeIcon="{StaticResource Img_Print}"
            SmallIcon="{StaticResource Img_Print}" />

        <syncfusion:ButtonAdv
            x:Name="button_Back"
            Grid.Row="11"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="1"
            Margin="0,5,170,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            Click="button_Back_Click"
            CornerRadius="5"
            FontFamily="Helvetica"
            FontSize="25"
            IconHeight="32"
            IconWidth="32"
            Label="Back  "
            LargeIcon="{StaticResource Img_Back}"
            SmallIcon="{StaticResource Img_Back}" />

        <syncfusion:DateTimeEdit
            x:Name="DateTimePicker1"
            Grid.Row="0"
            Grid.RowSpan="1"
            Grid.Column="3"
            Grid.ColumnSpan="1"
            Margin="0,0,100,10"
            FontSize="25" />
        <Image
            x:Name="Image1"
            Grid.Row="5"
            Grid.RowSpan="6"
            Grid.Column="2"
            Grid.ColumnSpan="2"
            Source="{StaticResource Img_product_image}"
            Stretch="Uniform"
            StretchDirection="Both" />
    </Grid>
</UserControl>
