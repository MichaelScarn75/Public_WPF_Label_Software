<UserControl
    x:Class="WpfApp3.View.Item_Image"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Lib="clr-namespace:WpfApp3.SharedLib"
    xmlns:ViewModel="clr-namespace:WpfApp3.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp3.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    Name="Item_Image_User_Control"
    Width="1366"
    Height="768"
    syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Windows11Dark}"
    DataContext="{DynamicResource Item_Image_Actual_ViewModel_Resource}"
    Loaded="Item_Image_User_Control_Loaded"
    mc:Ignorable="d">


    <Grid x:Name="Main_Grid">
        <!--  Define Rows for each ComboBox & TextBox  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="90" />
            <RowDefinition Height="550" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Define Columns for ComboBox, Label, and TextBox  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="0"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="4">
            <!--  indicator  -->
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <!--  indicator  -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="683" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Row="0"
                Grid.RowSpan="1"
                Grid.Column="1"
                Grid.ColumnSpan="1">
                <!--  indicator  -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <!--  indicator  -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="325" />
                    <ColumnDefinition Width="325" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <syncfusion:SfTextBoxExt
                    x:Name="SimpleFilterTextBox1"
                    Grid.Row="0"
                    Grid.RowSpan="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="1"
                    FontSize="17"
                    PreviewKeyDown="SimpleFilterTextBox1_PreviewKeyDown"
                    Text=""
                    Watermark="Type to filter" />
                <syncfusion:ComboBoxAdv
                    x:Name="SimpleFilterComboBox"
                    Grid.Row="0"
                    Grid.RowSpan="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="1"
                    FontSize="13"
                    SelectedIndex="0">
                    <syncfusion:ComboBoxItemAdv Content="Code" />
                    <syncfusion:ComboBoxItemAdv Content="Description" />
                </syncfusion:ComboBoxAdv>
                <syncfusion:ButtonAdv
                    x:Name="SimpleFilterSearchButton"
                    Grid.Row="0"
                    Grid.RowSpan="1"
                    Grid.Column="2"
                    Grid.ColumnSpan="1"
                    HorizontalContentAlignment="Right"
                    Background="White"
                    Click="SimpleFilterSearchButton_Click"
                    IconHeight="20"
                    IconWidth="20"
                    Label="{x:Null}"
                    LargeIcon="{StaticResource Img_GoTo}"
                    SmallIcon="{StaticResource Img_GoTo}" />
            </Grid>
        </Grid>
        <Grid
            x:Name="Detailed_Filter_Parent_Grid"
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="4">
            <!--  indicator  -->
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  indicator  -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Content="Show results:"
                FontSize="13"
                FontWeight="Bold" />

            <ScrollViewer
                x:Name="ScrollViewer_Filter"
                Grid.Row="1"
                Grid.RowSpan="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                VerticalScrollBarVisibility="Auto">
                <Grid x:Name="Detailed_Filter_Children_Grid">
                    <!--  indicator  -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  indicator  -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="280" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="280" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <syncfusion:ButtonAdv
                        x:Name="AddFilter_Button"
                        Grid.Row="1"
                        Grid.RowSpan="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Width="90"
                        Height="30"
                        HorizontalAlignment="Left"
                        HorizontalContentAlignment="Center"
                        Click="AddFilter_Button_Click"
                        FontSize="12"
                        FontWeight="SemiBold"
                        IconHeight="15"
                        IconWidth="15"
                        Label="Add Filter"
                        LargeIcon="{StaticResource Img_Add}"
                        SmallIcon="{StaticResource Img_Add}"
                        Tag="AddFilter_Button" />
                </Grid>
            </ScrollViewer>
            <syncfusion:ButtonAdv
                x:Name="Expander1"
                Grid.Row="1"
                Grid.RowSpan="1"
                Grid.Column="0"
                Grid.ColumnSpan="1"
                Width="33"
                Height="33"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                HorizontalContentAlignment="Right"
                Background="White"
                Click="Expander1_Click"
                IconHeight="20"
                IconWidth="20"
                Label="{x:Null}"
                LargeIcon="{StaticResource Img_ExpandAll}"
                SmallIcon="{StaticResource Img_ExpandAll}" />
        </Grid>
        <Grid
            Grid.Row="2"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="10,10,10,10">
            <!--  indicator  -->
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  indicator  -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <syncfusion:SfDataGrid
                x:Name="SfDataGrid1"
                Grid.Row="1"
                VerticalAlignment="Stretch"
                AddNewRowPosition="None"
                AllowDeleting="False"
                AllowEditing="False"
                AllowResizingColumns="True"
                AutoExpandGroups="True"
                AutoGenerateColumns="False"
                CellTapped="SfDataGrid1_CellTapped"
                ColumnSizer="AutoWithLastColumnFill"
                FontFamily="Helvetica"
                FontSize="14"
                GridCopyOption="IncludeHeaders, CopyData,CutData,IncludeFormat"
                GridLinesVisibility="Horizontal"
                GridPasteOption="None"
                GridValidationMode="None"
                HeaderContextMenu="{x:Null}"
                HeaderLinesVisibility="Horizontal"
                ItemsSource="{Binding Item_Image_Actual_IEnum, Mode=TwoWay}"
                LiveDataUpdateMode="AllowDataShaping"
                RowHeight="30"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectionMode="Single">
                <syncfusion:SfDataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem
                            x:Name="CopyRow"
                            Click="CopyRow_Click"
                            Header="Copy Row(s)" />
                    </ContextMenu>
                </syncfusion:SfDataGrid.ContextMenu>
                <syncfusion:SfDataGrid.Columns>
                    <syncfusion:GridTextColumn
                        HeaderText="Code"
                        HorizontalHeaderContentAlignment="Left"
                        MappingName="Code"
                        TextAlignment="Left" />
                </syncfusion:SfDataGrid.Columns>
            </syncfusion:SfDataGrid>
            <Image
                x:Name="ImageControl1"
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,0,80,0" />
        </Grid>
        <syncfusion:ButtonAdv
            x:Name="Import_Button"
            Grid.Row="3"
            Grid.Column="1"
            Width="150"
            Height="50"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="Import_Button_Click"
            IsEnabled="False"
            Label="Import"
            LargeIcon="{x:Null}"
            SmallIcon="{x:Null}" />
    </Grid>
</UserControl>
