<UserControl
    x:Class="WpfApp3.View.Customer_To_Print"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModel="clr-namespace:WpfApp3.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp3.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    Name="Customer_To_Print_User_Control"
    Width="1366"
    Height="768"
    syncfusionskin:SfSkinManager.Theme="{syncfusionskin:SkinManagerExtension ThemeName=Windows11Dark}"
    DataContext="{DynamicResource Choose_Customer_ViewModel_Resource}"
    Loaded="Customer_To_Print_User_Control_Loaded"
    mc:Ignorable="d">

    <Grid x:Name="Main_Grid">
        <!--  Define Rows for each ComboBox & TextBox  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="90" />
            <RowDefinition Height="550" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Define Columns for ComboBox, Label, and TextBox  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="0"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="4">
            <!--  indicator  -->
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <!--  indicator  -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="683" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Row="0"
                Grid.RowSpan="1"
                Grid.Column="1"
                Grid.ColumnSpan="1">
                <!--  indicator  -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <!--  indicator  -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="325" />
                    <ColumnDefinition Width="325" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <syncfusion:SfTextBoxExt
                    x:Name="SimpleFilterTextBox1"
                    Grid.Row="0"
                    Grid.RowSpan="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="1"
                    FontSize="17"
                    PreviewKeyDown="SimpleFilterTextBox1_PreviewKeyDown"
                    Text=""
                    Watermark="Type to filter" />
                <syncfusion:ComboBoxAdv
                    x:Name="SimpleFilterComboBox"
                    Grid.Row="0"
                    Grid.RowSpan="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="1"
                    FontSize="13"
                    SelectedIndex="0">
                    <syncfusion:ComboBoxItemAdv Content="Customer ID" />
                    <syncfusion:ComboBoxItemAdv Content="Description" />
                </syncfusion:ComboBoxAdv>
                <syncfusion:ButtonAdv
                    x:Name="SimpleFilterSearchButton"
                    Grid.Row="0"
                    Grid.RowSpan="1"
                    Grid.Column="2"
                    Grid.ColumnSpan="1"
                    HorizontalContentAlignment="Right"
                    Background="White"
                    Click="SimpleFilterSearchButton_Click"
                    IconHeight="20"
                    IconWidth="20"
                    Label="{x:Null}"
                    LargeIcon="{StaticResource Img_GoTo}"
                    SmallIcon="{StaticResource Img_GoTo}" />
            </Grid>
        </Grid>
        <Grid
            Grid.Row="2"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="10,10,10,10">
            <!--  indicator  -->
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  indicator  -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <syncfusion:SfDataGrid
                x:Name="SfDataGrid1"
                Grid.Row="1"
                VerticalAlignment="Stretch"
                AddNewRowPosition="None"
                AllowDeleting="False"
                AllowEditing="False"
                AllowResizingColumns="True"
                AutoExpandGroups="True"
                AutoGenerateColumns="False"
                CellTapped="SfDataGrid1_CellTapped"
                ColumnSizer="AutoWithLastColumnFill"
                FontFamily="Helvetica"
                FontSize="100"
                GridCopyOption="IncludeHeaders, CopyData,CutData,IncludeFormat"
                GridLinesVisibility="Horizontal"
                GridPasteOption="None"
                GridValidationMode="None"
                HeaderContextMenu="{x:Null}"
                HeaderLinesVisibility="Horizontal"
                ItemsSource="{Binding Choosecustomer_IEnum, Mode=TwoWay}"
                LiveDataUpdateMode="AllowDataShaping"
                PreviewKeyDown="SfDataGrid1_PreviewKeyDown"
                RowHeight="30"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectionMode="Single">
                <syncfusion:SfDataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem
                            x:Name="CopyRow"
                            Click="CopyRow_Click"
                            Header="Copy Row(s)" />
                    </ContextMenu>
                </syncfusion:SfDataGrid.ContextMenu>
                <syncfusion:SfDataGrid.Columns>
                    <syncfusion:GridTextColumn
                        HeaderText="Customer ID"
                        HorizontalHeaderContentAlignment="Left"
                        MappingName="CustomerId"
                        TextAlignment="Left" />
                    <syncfusion:GridTextColumn
                        HeaderText="Description"
                        HorizontalHeaderContentAlignment="Left"
                        MappingName="Description"
                        TextAlignment="Left" />
                </syncfusion:SfDataGrid.Columns>
            </syncfusion:SfDataGrid>
        </Grid>
    </Grid>
</UserControl>
