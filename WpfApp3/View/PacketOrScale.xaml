<UserControl
    x:Class="WpfApp3.View.PacketOrScale"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp3"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    Width="1366"
    Height="768"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="657*" />
        </Grid.ColumnDefinitions>

        <syncfusion:ButtonAdv
            x:Name="Button_Packet"
            Width="288"
            Height="339"
            Margin="349,174,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            Click="Button_Packet_Click"
            FontSize="30"
            IconHeight="200"
            IconWidth="200"
            Label="Packet"
            LargeIcon="{StaticResource Img_Packet}"
            SizeMode="Large"
            SmallIcon="{StaticResource Img_Packet}" />

        <syncfusion:ButtonAdv
            x:Name="Button_Scale"
            Width="288"
            Height="339"
            Margin="683,174,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            Click="Button_Scale_Click"
            FontSize="30"
            IconHeight="200"
            IconWidth="200"
            Label="Scale"
            LargeIcon="{StaticResource Img_Scale}"
            SizeMode="Large"
            SmallIcon="{StaticResource Img_Scale}" />
        <syncfusion:ButtonAdv
            x:Name="button_Back"
            Width="115"
            Height="65"
            Margin="94,645,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="button_Back_Click"
            FontSize="20"
            IconHeight="32"
            IconWidth="32"
            Label="Back"
            LargeIcon="{StaticResource Img_Back}"
            SmallIcon="{StaticResource Img_Back}" />

    </Grid>
</UserControl>
