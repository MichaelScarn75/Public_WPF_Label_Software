<Page
    x:Class="WpfApp3.View.SmallLabel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp3.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:syncfusionskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    Title="SmallLabel"
    d:DesignHeight="132.28"
    d:DesignWidth="170.07"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <StackPanel x:Name="stackPanel">
            <Grid
                x:Name="Grid"
                Height="130"
                Margin="0,0,0,0"
                HorizontalAlignment="Center">
                <!--  Define Rows for each ComboBox & TextBox  -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Define Columns for ComboBox, Label, and TextBox  -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <syncfusion:SfTextBoxExt
                    x:Name="sfTextBox1"
                    Grid.Row="0"
                    Grid.RowSpan="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="7"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    BorderThickness="0"
                    FontSize="13"
                    Text="Certified Organic"
                    Watermark="Certified Organic" />

                <syncfusion:SfTextBoxExt
                    x:Name="sfTextBox2"
                    Grid.Row="1"
                    Grid.RowSpan="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="7"
                    HorizontalAlignment="Center"
                    BorderThickness="0"
                    FontSize="13"
                    Text="Spinach Rocket"
                    TextWrapping="Wrap"
                    Watermark="Spinach Rocket" />

                <syncfusion:SfTextBoxExt
                    x:Name="sfTextBox3"
                    Grid.Row="1"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="6"
                    Margin="-2,19,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderThickness="0"
                    FontSize="8"
                    Text="NASAA 8130P CERTIFIED"
                    TextWrapping="Wrap"
                    Watermark="NASAA 8130P CERTIFIED" />

                <syncfusion:SfTextBoxExt
                    x:Name="sfTextBox4"
                    Grid.Row="2"
                    Grid.RowSpan="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="5"
                    Margin="-2,6,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderThickness="0"
                    FontSize="8"
                    Text="Produce of Australia"
                    TextWrapping="Wrap"
                    Watermark="Produce of Australia" />

                <syncfusion:SfTextBoxExt
                    x:Name="sfTextBox5"
                    Grid.Row="2"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Margin="3,16,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderThickness="0"
                    FontSize="13"
                    Text="RM7.20"
                    TextWrapping="Wrap"
                    Watermark="RM7.20" />

                <syncfusion:SfTextBoxExt
                    x:Name="sfTextBox6"
                    Grid.Row="2"
                    Grid.RowSpan="2"
                    Grid.Column="3"
                    Grid.ColumnSpan="3"
                    Margin="0,22,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderThickness="0"
                    FontSize="9"
                    Text="(694gm)"
                    TextWrapping="Wrap"
                    Watermark="(694gm)" />

                <Image
                    x:Name="Image1"
                    Grid.Row="1"
                    Grid.RowSpan="3"
                    Grid.Column="6"
                    Grid.ColumnSpan="3"
                    Width="40"
                    Height="40"
                    Margin="0,23,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="{StaticResource Img_qrcode}" />

                <syncfusion:SfTextBoxExt
                    x:Name="sfTextBox7"
                    Grid.Row="3"
                    Grid.RowSpan="2"
                    Grid.Column="7"
                    Grid.ColumnSpan="1"
                    Width="10"
                    Margin="0,12,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderThickness="0"
                    FontSize="6"
                    Text="HAHG"
                    TextWrapping="Wrap"
                    Watermark="HAHG" />

                <Image
                    x:Name="Image4"
                    Grid.Row="3"
                    Grid.RowSpan="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="7"
                    Width="100"
                    Height="40"
                    Margin="9,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="{StaticResource Img_horizontal_barcode}" />
            </Grid>
        </StackPanel>
    </Grid>
</Page>
